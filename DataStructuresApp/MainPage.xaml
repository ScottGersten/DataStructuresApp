<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DataStructuresApp.MainPage">
    <Grid RowDefinitions="auto, *"
          ColumnDefinitions="2*, 6*, 3*">

        <Label Text="Hello"></Label>


    </Grid>

    <VerticalStackLayout Spacing="10"
                         Padding="5"
                         Grid.Row="0"
                         Grid.Column="0"
                         Grid.RowSpan="2"
                         BackgroundColor="Azure"
                         VerticalOptions="Center">
        
        <Button x:Name="LinkedListButton"
                Text="Linked List"
                Clicked="LinkedListButton_Clicked"
                TextColor="BlueViolet"
                FontAttributes="Bold"
                Background="Transparent"
                BorderColor="BlueViolet"
                BorderWidth="5"></Button>

        <Button x:Name="BinaryTreeButton"
                Text="Binary Tree"
                Clicked="BinaryTreeButton_Clicked"
                TextColor="CadetBlue"
                FontAttributes="Bold"
                Background="Transparent"
                BorderColor="CadetBlue"
                BorderWidth="5"></Button>
        
    </VerticalStackLayout>

</ContentPage>
